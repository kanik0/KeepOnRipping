@page
@model KeepOnRipping.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<link rel="stylesheet" href="/css/main.css">

<div class="jumbotron">
  <div class="container">
    <br />
    <h1 class="post-title-main" itemprop="name headline">Error.</h1>
    <h2 class="post-title-main" itemprop="name headline">An error occurred while processing your request.</h2>
    <br />
  </div>
</div>

@if (Model.HtmlError != string.Empty)
{
    <br />
    <center>
        @Html.Encode(@Model.HtmlError)
    </center>
    <br /><br /><br />
}


@if (Model.ShowRequestId)
{
    <center>
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    </center>
}

